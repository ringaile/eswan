<% if notice %>
	<div class="well">
		<p id="notice"><%= notice %></p>
	</div>
<% end %>

<div class="panel panel-info" style="border-color: #999;">
  <div class="panel-heading" style="background-color: #999; color: black;border-color: #999">
    <p>
		<%= @post.user.email %>
	</p>
  </div>
  <div class="panel-body">
  	<p>
	  <%= @post.content %>
	</p>
  </div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
